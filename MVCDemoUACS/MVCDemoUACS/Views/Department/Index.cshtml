@model IEnumerable<MVCDemoUACS.Models.Department>
@using MVCDemoUACS.Models;

@{
    ViewBag.Title = "Index";
}
<div>
    <h2>Departments List</h2>
    <ul> @foreach (Department department in @Model)
    {
        <li>@Html.ActionLink(department.Name, "Index", "Employee", new { id = department.ID }, null)</li>
    }
    </ul>
</div>


